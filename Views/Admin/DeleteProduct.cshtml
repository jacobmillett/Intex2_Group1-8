@model BrixProduct

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Are you sure that you would like to delete this Product?</h2>
<h3>@Model.Name, @Model.Year</h3>
<form asp-controller="Admin" asp-action="DeleteProduct" method="post">
    <input type="hidden" asp-for="ProductId" />
    <button type="submit">Yes, Delete</button>
    <a class="btn btn-dark" asp-controller="Admin" asp-action="ProductCrud">No, Cancel</a>
</form>

@section Scripts {

}