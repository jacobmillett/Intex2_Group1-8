@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Extensions
@using Microsoft.AspNetCore.Mvc.RazorPages
@using Microsoft.AspNetCore.Identity
@model BrixProduct
@using AuroraBricks.Infrastructure



<style>
    h1 {
        margin-top: 20px;
        text-align: center;
        margin-bottom: 20px;
        font-size: 40px;
    }

    body {
        background: linear-gradient(to bottom, #10004E, #55439E);
        color: white;
    }

    .card-body {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center; 
        height: 100%; 
        margin-top: 10px;
        color: black;
        text-align: center;
    }

    .price-tag {
        margin-bottom: 25px;
        font-size: 25px;
    }

    .center-content {
        display: flex;
        flex-direction: column; /* Stack items vertically */
        justify-content: center; /* Center items vertically */
        align-items: center; /* Center items horizontally */
    }
</style>



<h1>@Model.Name</h1>

<div class="container col-12">
    <div class="row">
        <div class="col-md-12 mb-3">
            <div class="card">
                <div class="row g-0">
                    <div class="col-md-6 center-content">
                        <img src="@Model.ImgLink" alt="@Model.Name" style="padding: 20px 10px; width: 100%; height: auto; border-radius: 5px; margin-bottom: 15px;">
                        <!-- Button container with flex layout for horizontal alignment -->
                        <div style="display: flex; justify-content: center; width: 100%;">
                            <!-- First button with adjusted margin for spacing between buttons -->
                            <form method="post" asp-controller="Home" asp-action="AddToCart">
                                <input type="hidden" name="ProductId" value="@Model.ProductId" />
                                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.Path"/>
                                <button type="button" style="text-decoration: none; color: white; font-size: 18px; font-weight: bold; padding: 5px 10px; background-color: #01bf74; border: 1px solid black; border-radius: 10px; margin-right: 30px;">
                                    Add to Cart
                                </button>
                            </form>
                            <!-- Second button without additional right margin -->
                            <button type="button" style="padding: 5px 10px; background-color: #01bf74; border: 1px solid black; border-radius: 10px; margin-left: 30px;">
                                <a href="@Url.Action("ProductList", "Home")" style="text-decoration: none; color: white; font-size: 18px; font-weight: bold;">Cancel</a>
                            </button>
                        </div>
                    </div>


                    <div class="col-md-6 center-content">
                        <div class="card-body">
                            <h2 style="text-decoration: underline; font-weight: bold; font-size: 30px;">Description</h2>
                            <p class="description">@Model.Description</p>
                            <h2 style="font-size: 25px;">Price: <span class="price-tag">@($"${Model.Price:F2}")</span></h2>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<a href="@Url.Action("ProductDetail", "Home", new { ProductId = Model.ProductId })">
  
</a>

