@model IEnumerable<AuroraBricks.Models.BrixProduct>
@{
    ViewBag.Title = "Product List";
}

<style>
    body {
        background: linear-gradient(to bottom, #10004E, #55439E);
        color: white;
    }

    .card {
        margin-bottom: 30px; /* Add margin between cards */
        transition: box-shadow 0.3s ease; /* Add transition effect to box-shadow property */
        color: black;
        height: 300px;
        padding: 15px; /* Set padding inside the card */
        display: flex; /* Use flexbox for card layout */
        flex-direction: column; /* Stack elements vertically */
        justify-content: space-between; /* Distribute space between elements */
    }

    .card:hover {
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.5); /* Change box-shadow on hover */
    }

    .card-header {
        text-align: center; /* Center the title */
    }

    .card-body {
        display: flex; /* Use flexbox for body layout */
        justify-content: space-between; /* Align image and price/button on opposite ends */
        align-items: flex-end; /* Align items to the bottom */
    }

    .price-button-container {
        display: flex; /* Use flexbox for price and button layout */
        flex-direction: column; /* Stack price and button vertically */
        align-items: center; /* Center items in the column */
        margin-bottom: 15px; /* Add space at the bottom if needed */
    }

    h1 {
        text-align: center; /* Centers the title text */
        margin-top: 10px; /* Margin from the top*/
        margin-bottom: 20px; /* Adds some space below the title */
    }

    .price-tag {
        margin-bottom: 25px; /* Add space between price and button */
        font-size: 30px; /* Set the font size to 20px */
        font-weight: bold; /* Make the font weight bold */
    }

    .card-title {
        font-size: 20px;
        font-weight: bold;
    }

    .pagination-container {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .pagination-link {
        display: inline-block;
        font-size: 20px;
        padding: 5px 10px;
        margin: 0 5px;
        border: 1px solid black;
        border-radius: 3px;
        color: #10004E;
        background-color: #7fffd5;
        text-decoration: none;
    }

    .pagination-link:hover {
        background-color: #5fecd2;
    }

</style>

<h1 style="">@ViewBag.Title</h1>

<div class="container col-9">
    <div class="pb-3">
        <div class="row">
            @foreach (BrixProduct p in Model)
            {
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">@p.Name</h5>
                        </div>
                        <div class="card-body">
                            <div style="width: 200px; height: 200px; overflow: hidden; border-radius: 5px;">
                                <img src="@p.ImgLink" alt="@p.Name" style="width: 100%; height: 100%; object-fit: cover; border: 2px solid bla">
                            </div>
                            <div class="price-button-container">
                                <span class="price-tag">@($"${p.Price:F2}")</span>
                                <button type="button" style="padding: 10px 30px; background-color: #FFD700; border: 1px solid black; border-radius: 5px;">
                                    <a style="text-decoration: none; color: white; font-size: 30; font-weight: bold;">Add to Cart</a>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>






<div class="pagination-container">
    <a asp-controller="Home" asp-action="ProductList" asp-route-pageNum="1" class="pagination-link">1</a>
    <a asp-controller="Home" asp-action="ProductList" asp-route-pageNum="2" class="pagination-link">2</a>
    <a asp-controller="Home" asp-action="ProductList" asp-route-pageNum="3" class="pagination-link">3</a>
    <a asp-controller="Home" asp-action="ProductList" asp-route-pageNum="4" class="pagination-link">4</a>
    <a asp-controller="Home" asp-action="ProductList" asp-route-pageNum="5" class="pagination-link">5</a>
    <a asp-controller="Home" asp-action="ProductList" asp-route-pageNum="6" class="pagination-link">6</a>
    <a asp-controller="Home" asp-action="ProductList" asp-route-pageNum="7" class="pagination-link">7</a>
    <a asp-controller="Home" asp-action="ProductList" asp-route-pageNum="8" class="pagination-link">8</a>
</div>


