@model IEnumerable<AuroraBricks.Models.BrixProduct>
@{
    ViewBag.Title = "Product List";
}

    <style>
    body {
        background: linear-gradient(to bottom, #10004E, #55439E);
        color: white;
    }

    .card {
        margin-bottom: 30px; /* Add margin between cards */
        transition: box-shadow 0.3s ease; /* Add transition effect to box-shadow property */
        color: black;
        card-height: 270px;
    }

        .card:hover {
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.5); /* Change box-shadow on hover */
        }

    </style>

<div class="container col-9">
    <div class="pb-3">
        <div class="row">
            @foreach (BrixProduct p in Model)
            {
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-body d-flex justify-content-between">
                            <div>
                                <h3 class="card-title">@p.Name</h3>
                                <img src="@p.ImgLink" alt="@p.Name" style="max-width: 250px; border-radius: 5px;">
                            </div>
                            <div>
                                <div class="d-flex justify-content-end align-items-center">
                                    <span class="badge rounded-pill bg-success">$@p.Price</span>
                                    <button type="button" style="display: inline-block; margin-left: 10px; padding: 10px 20px; background-color: #7fffd5; border: 1px solid black; border-radius: 5px;">
                                        <a style="text-decoration: none; color: black; font-weight: bold;">Add to Cart</a>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>



