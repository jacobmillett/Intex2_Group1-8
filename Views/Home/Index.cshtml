@{
    ViewData["Title"] = "Home Page";
}

<div class="px-0">
    <img src="~/content/images/ABrix-Logo.webp" alt="A banner image of the logo" class="full-width-image">
</div>

<div class="divider-bar">Your top picks</div>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/content/product-images/Baseplate.jpg" alt="Image 1">
            <div class="price-text">$199.99</div>
            <div><button class="addToCart-btn">Add to Cart</button></div>
        </div>
        <div class="carousel-item">
            <img src="~/content/product-images/Helicopter.jpg" alt="Image 2">
            <div><button class="addToCart-btn">Add to Cart</button></div>
        </div>
        <div class="carousel-item">
            <img src="~/content/product-images/Typewriter.jpg" alt="Image 3">
            <div><button class="addToCart-btn">Add to Cart</button></div>
        </div>
        <div class="carousel-item">
            <img src="~/content/product-images/Ice cream truck.jpg" alt="Image 4">
            <div><button class="addToCart-btn">Add to Cart</button></div>
        </div>
        <div class="carousel-item">
            <img src="~/content/product-images/Up-Lego.jpg" alt="Image 5">
            <div><button class="addToCart-btn">Add to Cart</button></div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

@section Scripts {

}



